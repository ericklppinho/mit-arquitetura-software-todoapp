@model ToDo.Web.Mvc.Models.UpdateItemModel

@{
    ViewData["Title"] = "Alterar item";
}

<div class="col-md-4">
    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Nome da tarefa</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Done" class="control-label">Status</label>
            <input asp-for="Done" type="checkbox" />
        </div>

        <div class="form-group">
            <input type="submit" value="Alterar tarefa" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>